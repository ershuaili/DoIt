<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doit.mapper.StepMapper">

    <resultMap type="com.doit.entity.Step" id="StepMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="isFinish" column="is_finish" jdbcType="BOOLEAN"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StepMap">
        select id,
               content,
               is_finish
        from db_doit.step
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StepMap">
        select id,
               content,
               is_finish
        from db_doit.step
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StepMap">
        select
        id, content, is_finish
        from db_doit.step
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="isFinish != null">
                and is_finish = #{isFinish}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into db_doit.step(content, is_finish)
        values (#{content}, #{isFinish})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into db_doit.step(content, is_finish)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.content}, #{entity.isFinish})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into db_doit.step(content, is_finish)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.content}, #{entity.isFinish})
        </foreach>
        on duplicate key update
        content = values(content) , is_finish = values(is_finish)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_doit.step
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="isFinish != null">
                is_finish = #{isFinish},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from db_doit.step
        where id = #{id}
    </delete>

</mapper>

